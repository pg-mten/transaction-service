    "nest-winston": "^1.10.2",
    "nestjs-cls": "^6.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
